<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetIcons" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="tabStyle">@style/Widget.GetIcons.TabLayout</item>
        <!-- Custom styles -->
        <item name="textSecondary">@color/textSecondary</item>
        <!-- Text styles -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.GetIcons.Headline6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.GetIcons.Headline5</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GetIcons.Body2</item>
    </style>

    <style name="Widget.GetIcons.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/primary</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>
    </style>

    <style name="Widget.GetIcons.EditText" parent="">
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:padding">@dimen/space_l</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
    </style>

    <style name="TextAppearance.GetIcons.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.GetIcons.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.GetIcons.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>